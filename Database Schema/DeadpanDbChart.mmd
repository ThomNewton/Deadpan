    Reviews }|--|| AspNetUsers : "written by"
    Reviews }|--|| Movies : "is for"

    ApplicationUserMovies }|..|| AspNetUsers : "links user"
    ApplicationUserMovies }|..|| Movies : "links movie"

    AspNetUserRoles }|..|| AspNetUsers : "links user"
