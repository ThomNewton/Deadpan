@*
    This view serves as the main dashboard for user management in the Admin area.
    It is strongly typed to an IEnumerable of ApplicationUser, allowing it to display
    a list of all registered users in the application.
*@
@model IEnumerable<Deadpan.Models.ApplicationUser>
@using Microsoft.AspNet.Identity

@{
    ViewBag.Title = "User Management";
}

<h2>User Management</h2>

<table class="table">
    @* Table header row. *@
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Nickname)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Email)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.UserName)
        </th>
        <th></th> @* Empty header for the action links column *@
    </tr>

    @* Loop through each user in the Model and create a table row for them. *@
    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Nickname)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Email)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.UserName)
            </td>
            <td>
                @*
                    CRITICAL: This logic prevents the "Delete" link from appearing next to the
                    currently logged-in administrator's own account. This is a crucial safety
                    feature to prevent an admin from accidentally deleting themselves.
                *@
                @if (item.Id != User.Identity.GetUserId())
                {
                    @Html.ActionLink("Delete", "Delete", new { id = item.Id })
                }
                else
                {
                    <span class="text-muted">(Current User)</span>
                }
            </td>
        </tr>
    }

</table>
